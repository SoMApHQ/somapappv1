{
  "rules": {
    "marketinghub": {
      "public": {
        "categories": {
          ".read": true,
          "$catId": {
            ".write": "auth != null"
          }
        },
        "shops": {
          ".read": true,
          "$sellerUid": {
            ".write": "auth != null && (auth.uid === $sellerUid || root.child('marketinghub/admins/' + auth.uid).exists())",
            "photos": {
              ".validate": "newData.isList() && newData.val().length <= 5 && newData.children().all(child => child.isString())"
            },
            "profilePhotoUrl": {
              ".validate": "newData.isString() || newData.isNull()"
            },
            "categories": {
              ".validate": "newData.isMap() || newData.isNull()"
            }
          }
        },
        "items": {
          ".read": true,
          "$sellerUid": {
            "$itemId": {
              ".write": "auth != null && (auth.uid === $sellerUid || root.child('marketinghub/admins/' + auth.uid).exists())",
              "status": {
                ".validate": "newData.val() === 'active' || newData.val() === 'inactive'"
              }
            }
          }
        },
        "savedQuotes": {
          "$buyerUid": {
            "$quoteId": {
              ".read": "auth != null && auth.uid === $buyerUid",
              ".write": "auth != null && auth.uid === $buyerUid"
            }
          }
        }
      },
      "private": {
        "inquiries": {
          "$sellerUid": {
            "$msgId": {
              ".read": "auth != null && (auth.uid === $sellerUid || root.child('marketinghub/admins/' + auth.uid).exists())",
              ".write": "auth != null"
            }
          }
        },
        "analytics": {
          ".read": "auth != null && root.child('marketinghub/admins/' + auth.uid).exists()",
          ".write": "auth != null"
        }
      },
      "admins": {
        "$adminUid": {
          ".read": "auth != null && auth.uid === $adminUid",
          ".write": "auth != null && auth.uid === $adminUid"
        }
      }
    }
  }
}
