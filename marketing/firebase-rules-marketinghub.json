{
  "rules": {
    "marketinghub": {
      "public": {
        "listings": {
          "$listingId": {
            ".read": true,
            ".write": "auth != null && root.child('marketinghub/admins/' + auth.uid).exists()",
            "status": {
              ".validate": "newData.val() === 'approved' || newData.val() === 'pending' || newData.val() === 'rejected'"
            }
          }
        },
        "sellersPublic": {
          "$sellerUid": {
            ".read": true,
            ".write": "auth != null && (auth.uid === $sellerUid || root.child('marketinghub/admins/' + auth.uid).exists())",
            "verifiedStatus": {
              ".validate": "newData.val() === 'pending' || newData.val() === 'verified' || newData.val() === 'blocked' || newData.val() === 'rejected'"
            }
          }
        },
        "likes": {
          "$listingId": {
            "$buyerUid": {
              ".read": true,
              ".write": "auth != null && auth.uid === $buyerUid"
            }
          }
        }
      },
      "private": {
        "sellersKyc": {
          "$sellerUid": {
            ".read": "auth != null && (auth.uid === $sellerUid || root.child('marketinghub/admins/' + auth.uid).exists())",
            ".write": "auth != null && (auth.uid === $sellerUid || root.child('marketinghub/admins/' + auth.uid).exists())"
          }
        },
        "usage": {
          "$sellerUid": {
            ".read": "auth != null && (auth.uid === $sellerUid || root.child('marketinghub/admins/' + auth.uid).exists())",
            ".write": "auth != null && (auth.uid === $sellerUid || root.child('marketinghub/admins/' + auth.uid).exists())"
          }
        },
        "reports": {
          "$reportId": {
            ".read": "auth != null && root.child('marketinghub/admins/' + auth.uid).exists()",
            ".write": "auth != null" 
          }
        },
        "audit": {
          "$eventId": {
            ".read": "auth != null && root.child('marketinghub/admins/' + auth.uid).exists()",
            ".write": "auth != null && root.child('marketinghub/admins/' + auth.uid).exists()"
          }
        },
        "analytics": {
          ".read": "auth != null && root.child('marketinghub/admins/' + auth.uid).exists()",
          ".write": "auth != null"
        }
      },
      "admins": {
        "$adminUid": {
          ".read": "auth != null && auth.uid === $adminUid",
          ".write": "auth != null && auth.uid === $adminUid"
        }
      }
    }
  }
}
